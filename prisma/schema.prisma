generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  phone       String   @unique
  email       String?
  role        String   @default("STAFF") // ADMIN, STAFF, EXECUTIVE
  hourlyRate  Float    @default(0)
  weeklyGoal  Int      @default(0)
  annualLeaveDays Int  @default(0)
  profilePicture String?
  fcmToken    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Theme & Preferences
  theme       String   @default("light") // light, dark, system
  accentColor String   @default("#4f46e5")
  voiceEnabled Boolean  @default(false)

  // Real-time Tracking
  lastLat     Float?
  lastLng     Float?
  lastLocationUpdate DateTime?

  // GPS capture on start/end
  startLat     Float?
  startLng     Float?
  endLat       Float?
  endLng       Float?

  // Competency
  skillScore  Float    @default(0)
  
  attendance  AttendanceRecord[]
  leaves      LeaveRequest[]
  achievements        Achievement[]
  employeeOfTheMonths EmployeeOfTheMonth[]

  sentMessages     Message[] @relation("SentMessages")
  receivedMessages Message[] @relation("ReceivedMessages")


  // Tasks
  tasksGiven    Task[]       @relation("CreatedTasks")
  tasksReceived Task[]       @relation("AssignedTasks")
  
  // Expenses
  expenses      Expense[]

  documents   Document[]

  // Assets
  assets      Asset[]

  // Performance Reviews
  reviewsGiven    PerformanceReview[] @relation("Reviewer")
  reviewsReceived PerformanceReview[] @relation("Reviewee")

  // Payroll & Financials
  payrolls        Payroll[]
  advanceRequests AdvanceRequest[]
  trainingCompletions TrainingCompletion[]
  bookings            Booking[]

  // Social Wall
  posts       Post[]
  likes       Like[]
  comments    Comment[]
  kudosReceived Post[] @relation("KudosReceived")
  signatures  DocSignature[]
  goals       Goal[]

  // Org Chart
  managerId   String?  @db.ObjectId
  manager     User?    @relation("Manager", fields: [managerId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  reports     User[]   @relation("Manager")

  // Department
  departmentId String? @db.ObjectId
  department   Department? @relation(fields: [departmentId], references: [id])

  // Gamification
  points      Int      @default(0)

  // Shifts
  shifts      Shift[]

  // Rewards
  rewardRequests RewardRequest[]

  // Onboarding/Offboarding
  checklistAssignments ChecklistAssignment[]
  
  // Field Tasks (Saha)
  fieldTasks  FieldTask[]

  // LMS
  lmsCompletions LmsCompletion[]

  // Safety
  safetyStatus String   @default("UNKNOWN") // SAFE, DANGER, UNKNOWN
  lastSafetyUpdate DateTime?

  // Visitors
  invitedVisitors Visitor[] @relation("VisitorInviter")

  // Skills for AI matching
  skills      String[]   @default([])
  
  // Votes
  pollVotes   PollVote[]
  stories     Story[]

  // New Widgets
  moods       TeamMood[]
  notifications Notification[]
  
  // Shift Swaps
  swapRequests     ShiftSwapRequest[] @relation("SwapRequester")
  swapsClaimed     ShiftSwapRequest[] @relation("SwapClaimant")

  // --- NEW RELATIONS ---
  aiQueries        AiQueryLog[]
  sentimentLogs    SentimentLog[]
  attritionRisk    AttritionRisk?
  
  projectsManaged  Project[] @relation("ProjectManager")
  
  stockTransactions StockTransaction[] @relation("StockHandler")
  
  wellnessActivities WellnessActivity[]
  skillGaps        SkillGap[]
}

model Department {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String   @unique
  budgetLimit  Float    @default(0)
  budgetUsed   Float    @default(0)
  managerName  String?
  users        User[]
  createdAt    DateTime @default(now())
}

model Checklist {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  type        String   // ONBOARDING, OFFBOARDING, GENERAL
  items       ChecklistItem[]
  assignments ChecklistAssignment[]
  createdAt   DateTime @default(now())
}

model ChecklistItem {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  checklistId String    @db.ObjectId
  checklist   Checklist @relation(fields: [checklistId], references: [id])
  task        String
  category    String?   // IT, HR, FINANCE
  createdAt   DateTime  @default(now())
}

model ChecklistAssignment {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  userId      String    @db.ObjectId
  user        User      @relation(fields: [userId], references: [id])
  checklistId String    @db.ObjectId
  checklist   Checklist @relation(fields: [checklistId], references: [id])
  progress    Json      // Object mapping item IDs to boolean/timestamp
  status      String    @default("IN_PROGRESS") // COMPLETED, IN_PROGRESS
  assignedAt  DateTime  @default(now())
  completedAt DateTime?
}

model FieldTask {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  userId      String    @db.ObjectId
  user        User      @relation(fields: [userId], references: [id])
  title       String
  description String?
  tags        String[]  @default([])
  clientName  String?
  location    String?   // Text address
  lat         Float?
  lng         Float?
  status      String    @default("PENDING") // PENDING, IN_PROGRESS, COMPLETED, CANCELLED
  checkInTime DateTime?
  checkOutTime DateTime?
  checkInLat  Float?
  checkInLng  Float?
  notes       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  customerFeedback CustomerFeedback?
}

model Asset {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  serialNumber String?
  type         String    // LAPTOP, PHONE, CAR, KEY, OTHER
  status       String    // AVAILABLE, ASSIGNED, MAINTENANCE, BROKEN
  assignedToId String?   @db.ObjectId
  assignedTo   User?     @relation(fields: [assignedToId], references: [id])
  assignedDate DateTime?
  returnDate   DateTime?
  notes        String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  logs         AssetLog[]
}

model Document {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @db.ObjectId
  user        User     @relation(fields: [userId], references: [id])
  title       String
  type        String   // CONTRACT, REPORT, ID, DIPLOMA, OTHER
  fileUrl     String
  expiryDate  DateTime? // ⚠️ Belge Son Kullanma Uyarısı için
  uploadedAt  DateTime @default(now())
  
  // Signing
  requiresSigning Boolean @default(false)
  isSigned        Boolean @default(false)
  signedAt        DateTime?
  signature       String? // Base64 or text signature
}

model PerformanceReview {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  reviewerId  String   @db.ObjectId
  reviewer    User     @relation("Reviewer", fields: [reviewerId], references: [id])
  revieweeId  String   @db.ObjectId
  reviewee    User     @relation("Reviewee", fields: [revieweeId], references: [id])
  period      String   // e.g., "2024-Q1"
  score       Int      // 1-100
  feedback    String
  aiInsight   String?  // ⚠️ Attrition prediction veya yetenek analizi
  createdAt   DateTime @default(now())
}

model Payroll {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @db.ObjectId
  user        User     @relation(fields: [userId], references: [id])
  month       Int
  year        Int
  baseSalary  Float
  bonus       Float    @default(0)
  deductions  Float    @default(0)
  totalPaid   Float
  status      String   // DRAFT, PAID
  note        String?
  generatedAt DateTime @default(now())

  @@unique([userId, month, year])
}

model AdvanceRequest {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @db.ObjectId
  user        User     @relation(fields: [userId], references: [id])
  amount      Float
  reason      String
  status      String   // PENDING, APPROVED, REJECTED
  requestedAt DateTime @default(now())
  processedAt DateTime?
}

model SystemReport {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  content   Json
  createdAt DateTime @default(now())
}

model Task {
  id           String       @id @default(auto()) @map("_id") @db.ObjectId
  title        String
  description  String?
  status       TaskStatus   @default(PENDING)
  priority     TaskPriority @default(MEDIUM)

  dueDate      DateTime?
  tags         String[]     @default([]) // For AI matching (e.g. "it", "repair")
  
  assignedToId String       @db.ObjectId
  assignedTo   User         @relation("AssignedTasks", fields: [assignedToId], references: [id])
  
  assignedById String       @db.ObjectId
  assignedBy   User         @relation("CreatedTasks", fields: [assignedById], references: [id])

  // Project Management
  projectId    String?      @db.ObjectId
  project      Project?     @relation(fields: [projectId], references: [id])
  columnId     String?      @db.ObjectId
  column       ProjectColumn? @relation(fields: [columnId], references: [id])

  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
}

model Expense {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  description String
  amount      Float
  date        DateTime
  category    String?       // "Food", "Travel", "Equipment", etc.
  receiptImage String?      
  ocrData     Json?         // ⚠️ AI Fatura/Fiş Okuma verisi
  status      ExpenseStatus @default(PENDING)
  
  userId      String        @db.ObjectId
  user        User          @relation(fields: [userId], references: [id])
  
  rejectionReason String?

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

enum ExpenseStatus {
  PENDING
  APPROVED
  REJECTED
}


enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

model Message {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  content   String? 
  attachmentUrl String?
  senderId  String   @db.ObjectId
  receiverId String  @db.ObjectId
  
  sender    User     @relation("SentMessages", fields: [senderId], references: [id])
  receiver  User     @relation("ReceivedMessages", fields: [receiverId], references: [id])
  
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  // AI Sentiment
  sentimentScore Float?  // -1.0 to 1.0 (Very Negative to Very Positive)
  sentimentLabel String? // Positive, Neutral, Negative
  isAnonymous   Boolean @default(false)
}



model AttendanceRecord {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  type      String   // CHECK_IN, CHECK_OUT
  method    String   @default("QR") // QR, MANUAL
  timestamp DateTime @default(now())
  isLate    Boolean  @default(false)
}

model LeaveRequest {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  startDate DateTime
  endDate   DateTime
  reason    String
  status    String   @default("PENDING") // PENDING, APPROVED, REJECTED
  rejectionReason String?
  createdAt DateTime @default(now())
}

model Otp {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  phone     String   @unique
  code      String
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model Announcement {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  content   String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
}

model Achievement {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @db.ObjectId
  user        User     @relation(fields: [userId], references: [id])
  title       String
  description String?
  icon        String   @default("star")
  date        DateTime @default(now())
}

model EmployeeOfTheMonth {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  month     Int
  year      Int
  note      String?
  createdAt DateTime @default(now())

  @@unique([month, year])
}

model JobPosting {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  department  String
  type        String      // FULL_TIME, PART_TIME, REMOTE
  description String
  requirements String
  status      String      // ACTIVE, CLOSED
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  candidates  Candidate[]
}

model Candidate {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  jobPostingId String     @db.ObjectId
  jobPosting   JobPosting @relation(fields: [jobPostingId], references: [id])
  name         String
  email        String
  phone        String
  resumeUrl    String?
  status       String     // NEW, INTERVIEW, OFFER, HIRED, REJECTED
  rating       Int        @default(0)
  aiScore      Int?       // ⚠️ Otomatik Mülakat Değerlendirme skoru
  aiNotes      String?    // ⚠️ AI'nın aday analizi
  notes        String?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model Visitor {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  phone        String?
  company      String?
  visitReason  String
  hostName     String
  qrCode       String
  entryTime    DateTime   @default(now())
  exitTime     DateTime?
  status       String     // ACTIVE, COMPLETED, PENDING (for invited)
  invitedById  String?    @db.ObjectId
  invitedBy    User?      @relation("VisitorInviter", fields: [invitedById], references: [id])
}

model Training {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  url         String
  type        String    // VIDEO, DOCUMENT
  assignedToIds String[] @db.ObjectId
  createdAt   DateTime  @default(now())
  completions TrainingCompletion[]
}

model TrainingCompletion {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  userId     String   @db.ObjectId
  user       User     @relation(fields: [userId], references: [id])
  trainingId String   @db.ObjectId
  training   Training @relation(fields: [trainingId], references: [id])
  completedAt DateTime @default(now())

  @@unique([userId, trainingId])
}

model Resource {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  type     String    // ROOM, CAR, DEVICE
  bookings Booking[]
}

model Booking {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  resourceId String   @db.ObjectId
  resource   Resource @relation(fields: [resourceId], references: [id])
  userId     String   @db.ObjectId
  user       User     @relation(fields: [userId], references: [id])
  startTime  DateTime
  endTime    DateTime
  purpose    String
  createdAt  DateTime @default(now())
  status     String   @default("CONFIRMED") // CONFIRMED, CANCELLED
  cancellationReason String?
  notes       MeetingNote?
}

model Survey {
  id        String           @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  questions Json             // Array of questions objects
  isActive  Boolean          @default(true)
  createdAt DateTime         @default(now())
  responses SurveyResponse[]
}

model SurveyResponse {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  surveyId  String   @db.ObjectId
  survey    Survey   @relation(fields: [surveyId], references: [id])
  userId    String?  @db.ObjectId // Optional for anonymous
  answers   Json
  createdAt DateTime @default(now())
}

model Event {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  date        DateTime
  description String
  type        String   // MEETING, HOLIDAY, SOCIAL, BIRTHDAY
  createdAt   DateTime @default(now())
}

// Social Wall
model Post {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  content   String
  imageUrl  String?
  userId    String    @db.ObjectId
  user      User      @relation(fields: [userId], references: [id])
  likes     Like[]
  comments  Comment[]
  createdAt DateTime  @default(now())

  type        PostType  @default(STANDARD)
  kudosTargetId String? @db.ObjectId
  kudosTarget   User?   @relation("KudosReceived", fields: [kudosTargetId], references: [id])
  kudosCategory String? // TEAMWORK, LEADERSHIP, HELP, SPEED

  // Polls
  pollOptions PollOption[]
}

enum PostType {
  STANDARD
  KUDOS
  ANNOUNCEMENT
  POLL
}

model PollOption {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  postId    String     @db.ObjectId
  post      Post       @relation(fields: [postId], references: [id], onDelete: Cascade)
  text      String
  votes     PollVote[]
}

model PollVote {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  pollOptionId String     @db.ObjectId
  pollOption   PollOption @relation(fields: [pollOptionId], references: [id], onDelete: Cascade)
  userId       String     @db.ObjectId
  user         User       @relation(fields: [userId], references: [id])
  createdAt    DateTime   @default(now())

  @@unique([pollOptionId, userId]) // User can only vote once per option (logic usually enforces once per poll)
}

model Like {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  postId    String   @db.ObjectId
  post      Post     @relation(fields: [postId], references: [id])
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())

  @@unique([postId, userId])
}

model Comment {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  postId    String   @db.ObjectId
  post      Post     @relation(fields: [postId], references: [id])
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  content   String
  createdAt DateTime @default(now())
}

// Shifts
model Shift {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @db.ObjectId
  user        User     @relation(fields: [userId], references: [id])
  
  startTime   DateTime
  endTime     DateTime
  
  type        ShiftType @default(REGULAR)
  status      ShiftStatus @default(PUBLISHED)
  
  title       String?
  notes       String?
  location    String?
  
  breakDurationMinutes Int @default(60)
  
  isOvertime  Boolean   @default(false)
  
  approvedBy  String?   @db.ObjectId 
  approvedAt  DateTime?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  swapRequests ShiftSwapRequest[]
}

enum ShiftType {
  REGULAR
  OVERTIME
  FLEXIBLE
  REMOTE
  TRAINING
}

enum ShiftStatus {
  DRAFT
  PUBLISHED
  COMPLETED
  CANCELLED
}

model Reward {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  cost        Int
  image       String? 
  stock       Int      @default(-1)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  requests    RewardRequest[]
}

model RewardRequest {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  rewardId  String   @db.ObjectId
  reward    Reward   @relation(fields: [rewardId], references: [id])
  status    String   @default("PENDING") // PENDING, APPROVED, REJECTED
  note      String?
  createdAt DateTime @default(now())
}



model CompanySettings {
  id             String @id @default(auto()) @map("_id") @db.ObjectId
  officeLat      Float  @default(41.0082) // Default Istanbul
  officeLng      Float  @default(28.9784)
  geofenceRadius Int    @default(500) // meters
}

// --- MODULE: SMART LMS ---

model LmsModule {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  title        String
  description  String
  type         String   // VIDEO, ARTICLE, DOCUMENT
  contentUrl   String
  category     String   // TECHNICAL, SOFT_SKILLS, COMPLIANCE
  points       Int      @default(10)
  quizData     Json?    // Optional JSON for quiz questions/answers
  completions  LmsCompletion[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model LmsCompletion {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  userId       String   @db.ObjectId
  user         User     @relation(fields: [userId], references: [id])
  moduleId     String   @db.ObjectId
  module       LmsModule @relation(fields: [moduleId], references: [id])
  score        Int?     // Quiz result
  isCompleted  Boolean  @default(false)
  completedAt  DateTime @default(now())
}

// --- MODULE: COMPANY MEMORY (KNOWLEDGE BASE) ---

model KnowledgeBaseDoc {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  title           String
  content         String   // Extracted text content
  fileUrl         String?
  type            String   @default("GUIDELINE") // POLICY, MANUAL, GUIDELINE
  tags            String[]
  requiresSigning Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  signatures      DocSignature[]
  
  embedding       KnowledgeBaseEmbedding?
}

model DocSignature {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  docId     String   @db.ObjectId
  doc       KnowledgeBaseDoc @relation(fields: [docId], references: [id])
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  signature String?
  signedAt  DateTime @default(now())
  
  @@unique([docId, userId])
}

// --- SAFETY & EMERGENCY ---

enum SafetyStatus {
  SAFE
  DANGER
  UNKNOWN
}

// Add to User model: safetyStatus SafetyStatus @default(UNKNOWN)
// We will modify the User model separately to add this field.

model MeetingNote {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  bookingId   String   @unique @db.ObjectId
  booking     Booking  @relation(fields: [bookingId], references: [id])
  content     String
  summary     String?  // AI generated summary
  actionItems String[] // AI generated tasks
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model AssetLog {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  assetId     String   @db.ObjectId
  asset       Asset    @relation(fields: [assetId], references: [id])
  type        String   // MAINTENANCE, REPAIR, ASSIGNMENT, RETURN, RETIRE
  description String
  cost        Float    @default(0)
  date        DateTime @default(now())
  performedBy String?
}

model Goal {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @db.ObjectId
  user        User     @relation(fields: [userId], references: [id])
  title       String
  description String?
  status      String   @default("NOT_STARTED") // NOT_STARTED, IN_PROGRESS, COMPLETED, CANCELLED
  progress    Int      @default(0) // 0-100
  dueDate     DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model AiAutomationConfig {
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  autoScheduleEnabled Boolean  @default(false)
  minStaffPerShift    Int      @default(3)
  operatingHoursStart String   @default("09:00")
  operatingHoursEnd   String   @default("18:00")
  
  autoTaskAssignment  Boolean  @default(false)
  taskAssignmentMode  String   @default("BALANCED") // BALANCED, SKILL, SPEED
  
  updatedAt           DateTime @updatedAt
}

model SystemLog {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  level     String   @default("INFO") // INFO, WARN, ERROR, AI_ACTION
  message   String
  metadata  Json?
  createdAt DateTime @default(now())
}

model Story {
